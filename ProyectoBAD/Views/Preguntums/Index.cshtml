@model IEnumerable<ProyectoBAD.Models.Preguntum>

@{
    ViewData["Title"] = "Lista de Preguntas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="display-4 text-center my-4">@ViewData["Title"]</h1>

<div class="container">
    <div class="row justify-content-end mt-4">
        <div class="col-md-3">
            <a asp-action="Create" class="btn btn-success btn-block">
                <i class="fas fa-plus-circle mr-2"></i>Añadir Pregunta
            </a>
        </div>
    </div>
    <div class="table-responsive mt-4">
        <table class="table table-striped" id="tabla1">
            <thead>
                <tr>
                    <th>ID Encuesta</th>
                    <th>Tipo de Pregunta</th>
                    <th>Descripción</th>
                    <th>Requerida</th>
                    <th>Orden</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.IdEncuesta)</td>
                        <td>@Html.DisplayFor(modelItem => item.TipoPreguntaId)</td>
                        <td>@Html.DisplayFor(modelItem => item.DescripcionPregunta)</td>
                        <td>@Html.DisplayFor(modelItem => item.RequeridaPregunta)</td>
                        <td>@Html.DisplayFor(modelItem => item.OrdenPregunta)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.IdPregunta" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.IdPregunta" class="btn btn-info btn-sm">
                                <i class="fas fa-info-circle"></i> Detalles
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.IdPregunta" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
