@model IEnumerable<ProyectoBAD.Models.Usuario>

@{
    ViewData["Title"] = "Gestión de Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var urlCreate = Url.Action("Create", "Usuarios");
}
<input type="hidden" id="urlCreateUsuarios" value="@urlCreate" />
<h1 class="display-4 text-center my-4">@ViewData["Title"]</h1>

<div class="container">
    <div class="table-responsive mt-4">
        <table class="table table-bordered table-hover table-striped nowrap" style="width:100%" id="tblUsuarios" name="tblUsuarios">
            <thead>
                <tr>
                    <th>Correo electrónico</th>
                    <th>Teléfono Movil</th>
                    <th>Primer nombre</th>
                    <th>Segundo Nombre</th>
                    <th>Primer Apellido</th>
                    <th>Segundo Apellido</th>
                    <th>Genero</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.EmailUsuario)</td>
                        <td>@Html.DisplayFor(modelItem => item.TelefonoUsuario)</td>
                        <td>@Html.DisplayFor(modelItem => item.PrimerNombreUsuario)</td>
                        <td>@Html.DisplayFor(modelItem => item.SegundoNombreUsuario)</td>
                        <td>@Html.DisplayFor(modelItem => item.PrimerApellidoUsuario)</td>
                        <td>@Html.DisplayFor(modelItem => item.SegundoApellidoUsuario)</td>
                        <td>
                            <span>@(item.GenUsuario.Trim().Replace(" ", "") == "M" ? "Masculino" : (item.GenUsuario.Trim().Replace(" ", "") == "F" ? "Femenino" : ""))</span>
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.IdUsuario" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.IdUsuario" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.IdUsuario" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>