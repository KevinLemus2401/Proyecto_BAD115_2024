@model IEnumerable<ProyectoBAD.Models.Encuestum>

@{
    ViewData["Title"] = "Listado de Encuestas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="display-4 text-center my-4">@ViewData["Title"]</h1>

<div class="container-fluid">
    <div class="row justify-content-end mb-3">
        <div class="col-auto">
            <a class="btn btn-success" asp-action="Create">Agregar Encuesta</a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover" id="tabla1">
            <thead class="thead-dark">
                <tr>
                    <th>Usuario</th>
                    <th>Título</th>
                    <th>Objetivo</th>
                    <th>Grupo Meta</th>
                    <th>Indicaciones</th>
                    <th>Fecha</th>
                    <th>Estado</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.IdUsuario)</td>
                        <td>@Html.DisplayFor(modelItem => item.TituloEncuesta)</td>
                        <td>@Html.DisplayFor(modelItem => item.ObjetivoEncuesta)</td>
                        <td>@Html.DisplayFor(modelItem => item.GrupometaEncuesta)</td>
                        <td>@Html.DisplayFor(modelItem => item.IndicacionesEncuesta)</td>
                        <td>@Html.DisplayFor(modelItem => item.FechaEncuesta)</td>
                        <td>@Html.DisplayFor(modelItem => item.EstadoEncuesta)</td>
                        <td class="text-center">
                            <div class="btn-group" role="group" aria-label="Acciones">
                                
                                <a class="btn btn-outline btn-sm" href="@Url.Action("Edit", new { id = item.IdEncuesta })">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a class="btn btn-outline btn-sm" href="@Url.Action("Delete", new { id = item.IdEncuesta })">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                                    <a class="btn btn-outline btn-sm" href="@Url.Action("Details", new { id = item.IdEncuesta })">
                                    <i class="fas fa-book"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

