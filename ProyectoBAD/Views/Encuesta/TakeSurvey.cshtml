@model List<ProyectoBAD.Models.Preguntum>

@{
    ViewData["Title"] = "Responder Encuesta";
}

<h2>Responder Encuesta</h2>

<form asp-action="TakeSurvey" method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-group">
            <label>@Model[i].DescripcionPregunta</label>
            <div>
                @foreach (var opcion in Model[i].Opcionpregunta)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="respuestas[@i].OpcionId" value="@opcion.OpcionId" />
                        <label class="form-check-label">@opcion.ValorOpcion</label>
                    </div>
                }
            </div>
        </div>
        <input type="hidden" name="respuestas[@i].IdPregunta" value="@Model[i].IdPregunta" />
    }

    <input type="hidden" name="idEncuesta" value="@ViewBag.IdEncuesta" />
    <input type="hidden" name="idEncuestado" value="@ViewBag.IdEncuestado" />
    <button type="submit" class="btn btn-primary">Enviar Respuestas</button>
</form>
