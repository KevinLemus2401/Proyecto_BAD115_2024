@model ProyectoBAD.Models.Encuestum

@{
    ViewData["Title"] = "Compartir Encuesta";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body text-center">
                    <h2 class="card-title">Compartir Encuesta</h2>
                    <p class="card-text">Comparte el siguiente enlace para que otros puedan responder la encuesta:</p>
                    <a href="@ViewBag.Link">@ViewBag.Link</a>
                </div>
            </div>
        </div>
    </div>
</div>
