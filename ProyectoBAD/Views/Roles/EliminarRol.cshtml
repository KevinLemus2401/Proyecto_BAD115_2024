@model Microsoft.AspNetCore.Identity.IdentityRole

<div class="container text-center">
    <h2>Eliminar Rol</h2>

    <p>¿Estás seguro de que quieres eliminar el rol <strong>@Model.Name</strong>?</p>

    <form asp-action="EliminarRol" method="post">
        <input type="hidden" name="roleId" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
