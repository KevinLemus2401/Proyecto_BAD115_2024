@model ProyectoBAD.Models.Tipopreguntum

@{
    ViewData["Title"] = "Editar Tipo de Pregunta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="display-4 text-center">@ViewData["Title"]</h1>

<div class="container">
    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="TipoPreguntaId" />
                <div class="form-group">
                    <label asp-for="NombreTipoPregunta" class="control-label">Nombre del Tipo de Pregunta</label>
                    <input asp-for="NombreTipoPregunta" class="form-control" />
                    <span asp-validation-for="NombreTipoPregunta" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DescripcionTipoPregunta" class="control-label">Descripción del Tipo de Pregunta</label>
                    <input asp-for="DescripcionTipoPregunta" class="form-control" />
                    <span asp-validation-for="DescripcionTipoPregunta" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save mr-2"></i> Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left mr-2"></i> Volver a la Lista
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
