@model IEnumerable<ProyectoBAD.Models.Tipopreguntum>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

@{
    var preguntaId = ViewBag.preguntaId as int?;
    if (preguntaId.HasValue)
    {
        <p>Valor de ViewBag.preguntaId: @preguntaId</p>
    }
    else
    {
        <p>ViewBag.preguntaId no tiene un valor definido.</p>
    }
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreTipoPregunta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescripcionTipoPregunta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreTipoPregunta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionTipoPregunta)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TipoPreguntaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TipoPreguntaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TipoPreguntaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
