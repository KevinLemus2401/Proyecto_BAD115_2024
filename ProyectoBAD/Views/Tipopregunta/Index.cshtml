@model IEnumerable<ProyectoBAD.Models.Tipopreguntum>

@{
    ViewData["Title"] = "Lista de Tipos de Pregunta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="display-4 text-center my-4">Lista de Tipos de Pregunta</h1>

<div class="container">
    <div class="row justify-content-end mt-4">
        <div class="col-md-3">

            <!-- "Crear Tipo de Pregunta" -->
            <div class="text-center mt-4">
                <a asp-controller="Tipopregunta" asp-action="Create" class="btn btn-success">
                    <i class="fas fa-plus mr-1"></i> Crear Tipo de Pregunta
                </a>
            </div>

        </div>
    </div>
    <div class="table-responsive mt-4">
        <table class="table table-striped" id="tabla1">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.NombreTipoPregunta)</td>
                        <td>@Html.DisplayFor(modelItem => item.DescripcionTipoPregunta)</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Tipopregunta" asp-route-id="@item.TipoPreguntaId" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a asp-action="Details" asp-controller="Tipopregunta" asp-route-id="@item.TipoPreguntaId" class="btn btn-info btn-sm">
                                <i class="fas fa-info-circle"></i> Detalles
                            </a>
                            <a asp-action="Delete" asp-controller="Tipopregunta" asp-route-id="@item.TipoPreguntaId" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
