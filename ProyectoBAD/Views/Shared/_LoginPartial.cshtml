@using Microsoft.AspNetCore.Identity;
@inject SignInManager<Usuario> signInManager;

<ul class="navbar-nav ml-auto text-left">
    @if (signInManager.IsSignedIn(User))
    {
        <li class="nav-item d-none d-sm-inline-block dropdown">
            <a class="nav-link p-0" role="button" data-toggle="dropdown" aria-expanded="false">
                <div class="nav-link d-flex align-items-center">
                    <div class="info mr-2">
                        @User.Identity!.Name
                    </div>
                    <img src="~/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image" style="width: 40px; height: 40px;">
                </div>
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <li>
                    <a asp-controller="Account" asp-action="Settings" class="dropdown-item">
                        <i class="mr-2 fas fa-user"></i>
                        Cuenta de Usuario
                    </a>
                </li>
                <li>
                    <a asp-controller="Account" asp-action="CambiarPass" class="dropdown-item">
                        <i class="mr-2 fas fa-unlock-alt"></i>
                        Cambiar Contraseña
                    </a>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <a asp-action="Logout" asp-controller="Account" class="dropdown-item">
                        <i class="mr-2 fas fa-door-closed"></i>
                        Cerrar Sesión
                    </a>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Registrarse</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Acceder</a>
        </li>
    }
</ul>