@model ProyectoBAD.Models.Opcionpreguntum

@{
    ViewData["Title"] = "Eliminar Opción";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="display-4 text-center">@ViewData["Title"]</h1>

<div class="container">
    <div class="card mt-4">
        <h3 class="card-title text-center mb-4 mt-4">¿Estás seguro de que deseas eliminar esta opción?</h3>
        <div class="card-body">

            <div class="row justify-content-center">
                <div class="col-md-12">
                    <h4 class="card-subtitle mb-3">Detalles de la Opción</h4>
                    <dl class="row">
                        <dt class="col-sm-3 text-muted">Valor de la Opción</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.ValorOpcion)</dd>
                        <dt class="col-sm-3 text-muted">Descripción de la Opción</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.DescripcionOpcion)</dd>
                        <dt class="col-sm-3 text-muted">Estado de la Opción</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.EstadoOpcion)</dd>
                        <dt class="col-sm-3 text-muted">Orden de la Opción</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.OrdenOpcion)</dd>
                        <dt class="col-sm-3 text-muted">ID de la Pregunta</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.IdPreguntaNavigation.IdPregunta)</dd>
                    </dl>
                </div>
            </div>
            <div class="row justify-content-center mt-4">
                <div class="col-md-6">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="OpcionId" />
                        <button type="submit" class="btn btn-danger btn-block">
                            <i class="fas fa-trash-alt mr-2"></i> Eliminar
                        </button>
                    </form>
                </div>
                <div class="col-md-6">
                    <a asp-action="Index" class="btn btn-secondary btn-block">
                        <i class="fas fa-arrow-left mr-2"></i> Volver a la Lista
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
