@model ProyectoBAD.Models.Opcionpreguntum

@{
    ViewData["Title"] = "Crear Opción";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="display-4 text-center">@ViewData["Title"]</h1>

<div class="container">
    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="IdPregunta" class="control-label">ID de la Pregunta</label>
                    <select asp-for="IdPregunta" class="form-control" asp-items="ViewBag.IdPregunta"></select>
                    <span asp-validation-for="IdPregunta" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ValorOpcion" class="control-label">Valor de la Opción</label>
                    <input asp-for="ValorOpcion" class="form-control" />
                    <span asp-validation-for="ValorOpcion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DescripcionOpcion" class="control-label">Descripción de la Opción</label>
                    <input asp-for="DescripcionOpcion" class="form-control" />
                    <span asp-validation-for="DescripcionOpcion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EstadoOpcion" class="control-label">Estado de la Opción</label>
                    <input asp-for="EstadoOpcion" class="form-control" />
                    <span asp-validation-for="EstadoOpcion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OrdenOpcion" class="control-label">Orden de la Opción</label>
                    <input asp-for="OrdenOpcion" class="form-control" />
                    <span asp-validation-for="OrdenOpcion" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-plus-circle mr-2"></i> Crear Opción
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left mr-2"></i> Volver a la Lista
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
