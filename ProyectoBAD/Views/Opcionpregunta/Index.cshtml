@model IEnumerable<ProyectoBAD.Models.Opcionpreguntum>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdPregunta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorOpcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescripcionOpcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadoOpcion)
