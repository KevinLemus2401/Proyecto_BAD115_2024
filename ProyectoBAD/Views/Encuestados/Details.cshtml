@model ProyectoBAD.Models.Encuestado

@{
    ViewData["Title"] = "Detalles del Encuestado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Detalles del Encuestado</h1>

    <div class="card" style="max-width: 500px;">
        <div class="card-body">
            <h4 class="card-title">Encuestado</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-4">Correo Electrónico:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.EmailEncuestado)</dd>

                <dt class="col-sm-4">Fecha de Nacimiento:</dt>
                <dd class="col-sm-8">
                    @Html.DisplayNameFor(model => model.GenEncuestado)
                </dd>

                <dt class="col-sm-4">Género:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.GenEncuestado)</dd>
            </dl>

            <div class="btn-group">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.IdEncuestado">Editar</a>
                <a class="btn btn-secondary" asp-action="Index">Volver a la Lista</a>
            </div>
        </div>
    </div>
</div>