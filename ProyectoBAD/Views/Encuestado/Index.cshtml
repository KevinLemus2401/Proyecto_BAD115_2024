@model IEnumerable<ProyectoBAD.Models.Encuestado>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmailEncuestado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaNacEncuesta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GenEncuestado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmailEncuestado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNacEncuesta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GenEncuestado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdEncuestado">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdEncuestado">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdEncuestado">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
